#!/usr/bin/env bash

for ((i=0;i<=59;i++));
do
    for bin in proxy api ; do 
        if  ! pgrep -f fsgateway-$bin >/dev/null ;
        then
            (/usr/bin/python /usr/bin/fsgateway-$bin --config-file=/etc/fsgateway/fsgateway.conf > /dev/null 2>&1 &)
            echo "restart fsgateway-$bin...  $(date)"
        fi
    done
    sleep 1s
done
